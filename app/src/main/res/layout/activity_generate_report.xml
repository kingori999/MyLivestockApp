<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports Generation"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <!-- Report Type Spinner -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Report Type Below"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/spinner_report_type"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        />

    <!-- Generate Report Button -->
    <Button
        android:id="@+id/button_generate_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Report"
        android:backgroundTint="#C9FF5722"/>

    <!-- Export PDF Button -->
    <Button
        android:id="@+id/button_export_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export as PDF"
        android:backgroundTint="#C9FF5722"/>

    <!-- Report Content Display -->
    <TextView
        android:id="@+id/text_view_report_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Report Content"
        android:visibility="gone" />

</LinearLayout>
